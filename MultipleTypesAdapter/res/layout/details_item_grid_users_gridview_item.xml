<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_item_grid_users_gridview_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/details_item_grid_users_gridview_item_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/listview_item_imageview_icon_contentdescription"
        android:scaleType="centerInside"
        android:src="@drawable/ic_no_icon" />

    <TextView
        android:id="@+id/details_item_grid_users_gridview_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:maxHeight="20dp"
        android:maxLines="1"
        android:maxWidth="50dp"
        android:minHeight="20dp"
        android:minWidth="50dp"
        android:text="Name"
        android:textColor="@color/color_gray_medial" />

</LinearLayout>
