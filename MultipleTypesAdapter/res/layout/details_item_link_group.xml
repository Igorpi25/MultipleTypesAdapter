<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:gravity="center_vertical"
    android:padding="5dp"
    android:paddingLeft="10dp" >

    <ImageView
        android:id="@+id/details_item_link_group_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/listview_item_imageview_icon_contentdescription"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_no_icon" />

    <TextView
        android:id="@+id/details_item_link_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/details_item_link_group_icon"
        android:layout_centerVertical="true"
        android:text="Name" />

    <TextView
        android:id="@+id/details_item_link_group_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/details_item_link_group_name"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:text="[Group]"
        android:textColor="@color/color_text_gray" />
    
    <TextView
        android:id="@+id/details_item_link_group_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:text="Status"
        android:visibility="gone"
        android:textColor="@color/color_text_gray" />


</RelativeLayout>
