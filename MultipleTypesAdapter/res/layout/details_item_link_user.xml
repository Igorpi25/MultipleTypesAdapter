<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_white"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/details_item_link_user_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/listview_item_imageview_icon_contentdescription"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_no_icon" />

    <TextView
        android:id="@+id/details_item_link_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/details_item_link_user_icon"
        android:layout_centerVertical="true"
        android:text="Name"/>

    
    <TextView
        android:id="@+id/details_item_link_user_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/details_item_link_user_name"
        android:layout_centerVertical="true"
        android:maxHeight="30dp"
        android:paddingLeft="5dp"
        android:text="Status"
        android:visibility="gone"
        android:textColor="@color/color_text_gray" />

    <Button
        android:id="@+id/details_item_link_user_button"
        style="@style/style_button_dialog_positive"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="Button"
        android:textSize="12sp" />

</RelativeLayout>
